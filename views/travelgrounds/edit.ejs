<% include ../partials/header %>
	<link rel="stylesheet" href="/css/login.css">


    <div class="container ui main text container segment item">
        <h2 class="text-center">Edit <%=travelground.name %></h2>

        <form class="ui form" action="/travelgrounds/<%= travelground._id%>?_method=PUT" method="POST">
            
            <div class="field">
            <label>Title</label>
            <input type="text" name="travelground[name]" value="<%= travelground.name %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="travelground[image]" value="<%= travelground.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="travelground[description]"><%= travelground.description %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
            
        </form>
        </div>
        </div>
        </div>
    
    <% include ../partials/footer %>